# Happy Speller Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# JENKINS CREDENTIALS
# =============================================================================
JENKINS_URL=http://192.168.50.247:8080
JENKINS_USER=admin
JENKINS_TOKEN=your_jenkins_api_token_here

# =============================================================================
# GITEA CREDENTIALS  
# =============================================================================
GITEA_URL=http://your-gitea-server.com
GITEA_TOKEN=your_gitea_api_token_here
GITEA_USERNAME=your_gitea_username

# =============================================================================
# MINIO CREDENTIALS
# =============================================================================
MINIO_ENDPOINT=http://your-minio-server:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=your_bucket_name

# =============================================================================
# KUBERNETES CREDENTIALS
# =============================================================================
KUBERNETES_API_SERVER=https://192.168.50.226:6443
KUBERNETES_NAMESPACE=default
KUBECONFIG_PATH=/path/to/your/kubeconfig

# =============================================================================
# TERRAFORM CREDENTIALS
# =============================================================================
TF_VAR_minio_access_key=your_terraform_minio_access_key
TF_VAR_minio_secret_key=your_terraform_minio_secret_key
TF_VAR_grafana_admin_user=admin
TF_VAR_grafana_admin_password=your_grafana_password

# =============================================================================
# GRAFANA CREDENTIALS
# =============================================================================
GRAFANA_URL=http://your-grafana-server:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password
GRAFANA_API_KEY=your_grafana_api_key

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
PROMETHEUS_URL=http://your-prometheus-server:9090
ALERTMANAGER_URL=http://your-alertmanager-server:9093

# =============================================================================
# ENCRYPTION & SECURITY
# =============================================================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# APPLICATION SPECIFIC
# =============================================================================
APP_ENV=development
DEBUG=false
LOG_LEVEL=info