{
  "name": "happy-speller",
  "version": "1.0.0",
  "description": "Happy Speller learning application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.3",
    "eslint": "^8.38.0",
    "nodemon": "^2.0.22"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageReporters": ["text", "lcov", "html"],
    "collectCoverageFrom": [
      "server.js",
      "public/**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!test/**"
    ],
    "testMatch": ["**/test/**/*.test.js"],
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": ".",
        "outputName": "junit.xml"
      }]
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "no-console": "warn"
    }
  }
}
